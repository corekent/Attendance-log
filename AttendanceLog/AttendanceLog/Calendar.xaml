<Window x:Class="AttendanceLog.Calendar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceLog"
        mc:Ignorable="d"
        Title="Calendar" Height="290" Width="181">
    <Grid Height="271" VerticalAlignment="Top">
        <Calendar x:Name="StartDate" HorizontalAlignment="Center" Height="168" VerticalAlignment="Center" Width="180"/>
        <TextBlock HorizontalAlignment="Center" Height="38" Margin="0,10,0,0" Text="Выберете дату начала занятий" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" FontWeight="Bold"/>
        <Button x:Name="SaveStartDate" Content="Сохранить" HorizontalAlignment="Center" Height="27" Margin="0,231,0,0" VerticalAlignment="Top" Width="147" Click="SaveStartDate_Click"/>

    </Grid>
</Window>
